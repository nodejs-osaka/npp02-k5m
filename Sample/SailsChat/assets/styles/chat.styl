#chat

  background-color #CCC
  margin-top 30px
  padding 30px
  border thin solid #666

  #messages
    min-height 400px
    border 1px solid #0CF
    background-color #DEF

    .list
      margin 0
      padding 0

      .item
        list-style none
        margin 5px
        padding 5px
        border-bottom-width 1px
        border-bottom-style dashed
        border-bottom-color #666
        line-height 120%

        transition all .3s ease

      .item.v-enter, .item.v-leave
        height 0
        opacity 0


  #input_area
    padding 10px

