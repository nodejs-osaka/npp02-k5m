<div id="chat" class="col-sm-10 col-sm-offset-1">
    <div>connect: <span id="online" v-text="online"></span> <span v-text="pid"></span></div>
    <div id="input_area">
        <div class="row">
        <div class="col-sm-1">name:</div>
        <div class="col-sm-3"><input type="text" v-model="user" autofocus class="form-control" placeholder="Name input"></div>
        </div>
        <div class="row">
        <div class="col-sm-1">massage:</div>
        <div class="col-sm-5"><input type="text" v-on="keyup: emit | key enter" v-model="msg" class="form-control" placeholder="Message input" /></div>
        </div>
    </div>
    <div id="messages">
        <ul class="list">
            <li class="item" v-repeat="items" v-transition>{{name}}&nbsp;&gt;&nbsp;{{msg}}</li>
        </ul>
    </div>
    <div style="text-align: right">pid:<span><%=pid %></span></div>
</div>